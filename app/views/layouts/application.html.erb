        <div class="me-auto">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", home_index_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="container min-vh-100">
      <div>
        <p class="notice"><%= notice %></p>
